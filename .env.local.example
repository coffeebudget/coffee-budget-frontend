# Local Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=                    # Generate with: openssl rand -base64 32

# Auth0 Configuration (from Auth0 Dashboard → Applications → Settings)
NEXTAUTH_AUTH0_ID=                  # Your Auth0 Client ID
NEXTAUTH_AUTH0_SECRET=              # Your Auth0 Client Secret
NEXTAUTH_AUTH0_ISSUER=https://YOUR_AUTH0_TENANT.auth0.com

# API Configuration (Local Backend)
NEXT_PUBLIC_API_URL=http://localhost:3002
NEXT_PUBLIC_AUTH0_AUDIENCE=https://your-api-identifier
NEXT_PUBLIC_AUTH0_ISSUER=https://YOUR_AUTH0_TENANT.auth0.com
